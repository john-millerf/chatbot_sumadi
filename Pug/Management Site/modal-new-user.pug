extend includes/layout-normal.pug
block main-content
	.container--sumadi-modal.react-modal
		.sumadi-modal
			a.modal__button-close: i.fas.fa-times-circle
			.header--with-image
				a(href="#"): img(src="../../Html/Management%20Site/images/icon-avatar.png")
				.header--with-image__content
					h2 Add New User
					p In order to add a new user to the platform please fill the following information.
			.panel--content
				.col-12
					label.form__label
						strong Name
					.input-container
						input(type="text" placeholder="")
				.col-12
					label.form__label
						strong Email
					.input-container
						input(type="mail" placeholder="")
				.col-12
					label.form__label
						strong Password
					.input-container
						input(type="password" placeholder="")
				.col-12
					label.form__label
						strong Repeat Password
					.input-container
						input(type="password" placeholder="")
				.col-12
					label.form__label
						strong Role
					.input-container
						select
							option Administrator
							option User
				.col-12
					label.form__label
						strong Active
					.switch
						input(type="checkbox" checked="checked")
						span.slider
							.switch__text.switch__text--on ON
							.switch__text.switch__text--off OFF
			.col-12.justify-content-center.modal-footer
				button.button--normal Add New User